<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Compre produtos com garantia de qualidade na nossa loja online. Encontre as melhores ofertas e coleções.">
    <meta name="keywords" content="loja, produtos, compras, ecommerce">
    <title>Loja</title>

    <!-- Links de estilização -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://unpkg.com/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="https://plpstore.com.br/img/logo.png" rel="icon" type="image/png">
</head>

<body>
    <!-- Botão para disparar o Toast -->
    <button type="button" class="btn btn-primary" id="liveToastBtn">Show live toast</button>

    <!-- Container do Toast -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <img src="https://tcg.pokemon.com/assets/img/global/tcg-card-back.jpg" class="rounded me-2" alt="Imagem do Produto" style="width: 40px; height: 40px;">
                <strong class="me-auto">PLP Store</strong>
                <small>Agora</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Fechar"></button>
            </div>
            <div class="toast-body">
                O produto <strong>Nome do Produto</strong> foi adicionado ao carrinho!
            </div>
        </div>
    </div>
        <!-- Scripts do Bootstrap (incluindo Popper.js) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        // Obtendo os elementos
        const toastTrigger = document.getElementById('liveToastBtn')
        const toastLiveExample = document.getElementById('liveToast')

        // Verificando se o botão de disparo do toast existe
        if (toastTrigger) {
            const toastBootstrap = new bootstrap.Toast(toastLiveExample) // Usando a inicialização simples

            // Evento de clique no botão para disparar o toast
            toastTrigger.addEventListener('click', () => {
                console.log("Toast sendo exibido");
                toastBootstrap.show()  // Exibe o Toast
            })
        }
    </script>


</body>

</html>
