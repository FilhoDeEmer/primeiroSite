<%- include('components/head') %>

<body>
  <header>
    <!-- Navbar -->
    <%- include('components/navbar') %>
  </header>

  <div class="container-fluid">
    <div class="row">
      <!-- Menu lateral -->
      <%- include('components/sidemenu') %>

        <!-- Conteúdo Principal Fixo-->
        <main id="conteudo-principal" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class="mb-3 py-3">
            <form class="d-flex" role="search">
              <input class="form-control me-2" type="search" placeholder="Buscar na PLP Store" aria-label="search">
              <button class="btn btn-outline-success" type="submit">Buscar</button>
            </form>
          </div>

          <!-- Pagina homePrincipal -->
            <%- include('homePrincipal', {destaque , banner}) %>

            <!-- Conteúdo de coleções -->
            <section id="colecoes" class="conteudo-escondido">
              <h2 class="mb-4">Coleções</h2>
              <p>Exibição de coleções disponíveis na loja.</p>
              <!-- Adicione aqui o conteúdo relacionado a coleções -->
            </section>

            <!-- Conteúdo de produtos -->
            <section id="produtos-detail" class="conteudo-escondido">
              <h2 class="mb-4">Produtos</h2>
              <p>Exibição de produtos disponíveis na loja.</p>
              <!-- Adicione aqui os produtos -->
            </section>

            <!-- Conteúdo de códigos TCG Live -->
            <section id="codigos" class="conteudo-escondido">
              <h2 class="mb-4">Códigos TCG Live</h2>
              <p>Adicione aqui os códigos TCG Live disponíveis.</p>
            </section>

            <!-- Conteúdo de próximas coleções -->
            <section id="proximas-colecoes" class="conteudo-escondido">
              <h2 class="mb-4">Próximas Coleções</h2>
              <p>Informações sobre coleções futuras.</p>
            </section>
        </main>

    </div>
  </div>

  <!-- Contato -->
  <class id="contato" class="bg-light py-5 conteudo-ativo">
    <div class="container">
      <h2 class="text-center mb-4">Contato</h2>
      <form action="#" method="POST">
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" class="form-control" id="nome" placeholder="Seu nome" required>
          </div>
          <div class="col-md-6">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Seu email" required>
          </div>
        </div>
        <div class="mb-3">
          <label for="mensagem" class="form-label">Mensagem</label>
          <textarea class="form-control" id="mensagem" rows="4" placeholder="Sua mensagem" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
      </form>
    </div>
  </class>


  <%- include('components/footer') %>

    <!-- Botão de voltar ao topo -->
    <button id="back-to-top" class="btn-top">
      <i class="fas fa-arrow-up"></i>
    </button>




    <script>
      // Mostrar/esconder botão de voltar ao topo
      const backToTopButton = document.getElementById('back-to-top');
      window.addEventListener('scroll', () => {
        if (window.scrollY > 300) {
          backToTopButton.style.display = 'flex';
        } else {
          backToTopButton.style.display = 'none';
        }
      });

      // Ação de voltar ao topo
      backToTopButton.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    </script>
    <script>
      document.getElementById('logo-link').addEventListener('click', function (e) {
        e.preventDefault(); // Impede o comportamento padrão do link.

        // Esconde todas as seções.
        document.querySelectorAll('section').forEach(section => {
          section.classList.add('conteudo-escondido');
          section.classList.remove('conteudo-ativo');
        });

        // Mostra apenas a seção inicial (home).
        const homeSection = document.getElementById('home');
        if (homeSection) {
          homeSection.classList.add('conteudo-ativo');
          homeSection.classList.remove('conteudo-escondido');
        }
      });
    </script>

    <!--Mudar pagina principal -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const menuItems = document.querySelectorAll(".menu-item");
        const sections = document.querySelectorAll("main > section");

        menuItems.forEach((item) => {
          item.addEventListener("click", function (e) {
            e.preventDefault();

            const targetId = this.dataset.target;

            // Esconde todas as seções
            sections.forEach((section) => {
              section.classList.add("conteudo-escondido");
              section.classList.remove("conteudo-ativo");
            });

            // Mostra a seção correspondente
            const targetSection = document.getElementById(targetId);
            if (targetSection) {
              targetSection.classList.remove("conteudo-escondido");
              targetSection.classList.add("conteudo-ativo");
            }
          });
        });
      });
    </script>

</body>

</html>