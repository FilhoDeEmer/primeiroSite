<section id="home" class="conteudo-ativo">
    <div class="text-center py-2"
        style="background-image: url('<%= banner[0].imgName.url %>'); background-size: unset;background-position: center;">
        <h1 class="mt-3">Bem-vindo à PLP Store</h1>
        <p class="lead">A sua loja de Pokémon TCG</p>
    </div>

    <div class="container">
        <h2 class="text-center mb-4">Produtos em Destaque</h2>
        <div class="row g-3">
            <% destaque.forEach((product)=> { %>
                <div class="col-6 col-md-4 col-lg-3 d-flex product-card" data-name="<%= product.nome.toLowerCase() %>"
                    data-stock="<%= product.est_comum > 0 ? 'in-stock' : 'out-of-stock' %>">
                    <div class="card text-center shadow-sm" style="width: 250px; height: 350px;">
                        <a href="/produtos/<%= product.id_carta %>">
                            <img src="<%= product.img_tcg ? product.img_tcg : '/img/tcg-card-back.jpg' %>"
                                class="card-img-top p-2 <%= product.est_comum === 0 ? 'grayscale' : '' %>"
                                style="height: 200px; object-fit: contain;">
                        </a>
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div class="card-title text-break"
                                style="font-size: 16px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                <%= product.nome %>
                            </div>
                            <h6 class="card-text">Preço: <strong>R$ <%= parseFloat(product.preco_comum).toFixed(2) %>
                                        </strong></h6>
                            <b class="card-text">Un.: <strong>
                                    <%= product.est_comum %>
                                </strong></b>
                            <a href="#"
                                class="btn btn-primary mt-auto <%= product.est_comum === 0 ? 'disabled' : '' %>">Comprar</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <br>
</section>


<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>